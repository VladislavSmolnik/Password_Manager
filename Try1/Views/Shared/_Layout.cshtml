<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Менеджер паролей</title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Password_Manager.styles.css" asp-append-version="true" />
</head>
<body>


	<header>
		<nav class="navbar navbar-inverse">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" asp-controller="Home" asp-action="Index">Менеджер паролей</a>
				</div>
				<ul class="nav navbar-nav">
					<li class="nav-item" style="font-size:large"><a asp-controller="Password" asp-action="Index">Мои пароли</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">

					@if (User.Identity.IsAuthenticated)
					{
						<li class="nav-item"><a href="#">@User.Identity.Name</a></li>
						<li class="nav-item">
							<a href="#">
								<form method="post" asp-controller="Account" asp-action="Logout" style="color:black">
									<input type="submit" value="Выход" />
								</form>
							</a>
						</li>
					}
					else
					{
						<li><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login"><span class="glyphicon glyphicon-user"></span> Вход</a></li>
						<li><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-log-in"></span> Регистрация</a></li>
					}
				</ul>
			</div>
		</nav>
	</header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>










